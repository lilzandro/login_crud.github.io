<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card">
        <div class="card-body">
          <form action="/links/edit/{{link.id}}" method="POST">
            <div class="form-group">
              <input value="{{link.nameContacto}}" type="text" class="form-control" name="nameContacto"
                placeholder="NOmbre completo" autofocus required />
            </div>
            <div class="form-group">
              <input value="{{link.tlf}}" type="text" class="form-control" name="tlf" placeholder="Telefono" required />
            </div>
            <div class="form-group">
              <input value="{{link.correo}}" type="email" name="correo" class="form-control" placeholder="Correo"
                required />
            </div>
            <div class="form-group">
              <textarea name="description" rows="2" class="form-control"
                placeholder="Description">{{link.description}} </textarea>
            </div>
            <div class="btn-grou text-center">
              <button class="btn btn-success btn-primary">
                Editar
              </button>

            </div>
          </form>
          <div class="btn-gru text-center">
            <button class="btn btn-danger btn-primary" onclick="window.location.href = '/links';">
              Cancelar
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>